extends layout

block content
  h1= title
  p search results for vegetable 
  p 
  - var vegetable=[{name: "Potato",color: "brown" ,weight: 2},{name: "Tomato",color: "red",weight: 4},{name: "Cabbage",color: "green",weight: 3}]
    div(class="container-fluid")
      div(class="row")
        each v,index in vegetable  
            div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
            div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
            div(class="col-sm-2" onclick=`buy(${index})`) #{v.weight}
    script.                
        function buy(intemNo)
        {
              alert('you purchased Item ${intemNo+1}'')
        }